
@{
    ViewBag.Title = "BAProfil";
    Layout = "~/Views/Shared/_LayoutBirimAdmin.cshtml";
}

@model HataBildirimSistemi.Models.Admin

<h2 class="mt-4">Profil Bilgilerim</h2>

<table class="table table-bordered mt-3 w-50">
            <tr>
                <th>Ad</th>
                <td>@Model.Ad</td>
            </tr>
            <tr>
                <th>Soyad</th>
                <td>@Model.Soyad</td>
            </tr>
            <tr>
        <th>Çalıştığı birim</th>
                <td>@Model.Birim.Ad</td>
            </tr>
            <tr>
                <th>Yetkisi</th>
                <td>@Model.Yetki.Ad</td>
            </tr>
            <tr>
        <th>Telefon</th>
                <td>@Model.TelNo</td>
            </tr>
            <tr>
        <th>Kullanıcı Ad</th>
        <td>@Model.AKullaniciAd</td>
            </tr>
            <tr>
                <th>Şifre</th>
        <td>@Model.ASifre</td>
            </tr>
        </table>
<a href="@Url.Action("Duzenle", "BirimAdmin", new { id = Model.Id })" class="btn btn-warning">
    Düzenle
