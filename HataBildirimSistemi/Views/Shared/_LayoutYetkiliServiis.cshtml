
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Yetkili Servis Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f2f7fc;
            display: flex;
            overflow: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background-color: #A9C8FF; /* Pastel mavi */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 2rem 1rem;
            min-height: 100vh;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar h4 {
                color: white;
                font-weight: 700;
                text-align: center;
                margin-bottom: 2rem;
                font-size: 1.8rem;
                letter-spacing: 1.2px;
            }

            .sidebar .nav-link {
                color: white;
                font-size: 1.25rem;
                font-weight: 600;
                padding: 12px 16px;
                border-radius: 10px;
                transition: background-color 0.3s ease;
                margin-bottom: 8px;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #7BA9FF; /* Daha koyu pastel mavi hover */
                    color: white;
                    text-decoration: none;
                }

        .sidebar-bottom {
            margin-top: auto;
        }

        /* İçerik alanı */
        .content {
            flex-grow: 1;
            padding: 2rem 3rem;
            overflow-y: auto;
            height: 100vh;
        }

        h2 {
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #333;
        }

        table {
            width: 100%;
            margin-top: 30px;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            table th, table td {
                font-size: 1.2rem;
                padding: 15px 20px;
                background-color: white;
                border-radius: 8px;
            }

        /* Scroll bar */
        .content::-webkit-scrollbar {
            width: 8px;
        }

        .content::-webkit-scrollbar-thumb {
            background-color: #A9C8FF;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <h4><i class="bi bi-tools me-2"></i>Yetkili Servis Paneli</h4>
            <nav class="nav flex-column">
                @Html.ActionLink("Arızalar", "ArizaGoruntule", "YetkiliServis", null, new { @class = "nav-link" })
                @Html.ActionLink("Tamamlanan Arızalar", "TamamlananArizaGoruntule", "YetkiliServis", null, new { @class = "nav-link" })
            </nav>
        </div>

        <!-- Alt Menü -->
        <div class="sidebar-bottom">
            <nav class="nav flex-column">
                @Html.ActionLink("Profil", "BAProfil", "BirimAdmin", null, new { @class = "nav-link" })
                @Html.ActionLink("Çıkış Yap", "LogOut", "BirimAdmin", null, new { @class = "nav-link" })
            </nav>
        </div>
    </div>

    <!-- İçerik -->
    <div class="content">
        <h2>Arızalar</h2>
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

