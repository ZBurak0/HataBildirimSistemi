@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Birim Admin Panel</title>
    <link href="~/Content/theme.css" rel="stylesheet" />

    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-size: 1.3rem; /* Genel yazı boyutunu artırdık */
        }

        .navbar {
            font-size: 1.2rem; /* Navbar yazı boyutunu artırdık */
        }

        .navbar-brand {
            font-size: 1.8rem; /* Navbar başlık boyutunu büyüttük */
        }

        .nav-link {
            font-size: 1.4rem; /* Navbar linklerinin yazı boyutunu artırdık */
            font-weight: 600; /* Navbar linklerini kalınlaştırdık */
            padding: 10px 15px; /* Linklerin etrafına biraz boşluk ekledik */
        }

            .nav-link:hover {
                background-color: #B8D5FF; /* Hover durumunda pastel mavi arka plan ekledik */
            }

        main {
            font-size: 1.2rem; /* Sayfa içeriği yazı boyutunu büyüttük */
        }

        table th, table td {
            font-size: 1.2rem; /* Tablo başlıkları ve hücre yazı boyutlarını artırdık */
            padding: 20px; /* Hücrelerin içine daha fazla boşluk ekledik */
        }

        table {
            width: 100%;
            margin-top: 30px; /* Tabloya daha fazla boşluk ekledik */
        }

        h2, h3 {
            font-size: 2.5rem; /* Başlık yazı boyutunu 2 katına çıkardık */
            font-weight: 700; /* Yazı tipini kalın yaptık */
        }

        /* Navbar butonlarını büyütme ve kalınlaştırma */
        .navbar-nav .nav-item .nav-link {
            font-size: 1.5rem; /* Linkleri daha büyük yapıyoruz */
            font-weight: 700; /* Linkleri kalın yapıyoruz */
            padding: 15px 20px; /* Butonların etrafına ekstra boşluk ekledik */
        }

        /* Dropdown menüsündeki item'ları da büyüttük */
        .dropdown-menu .dropdown-item {
            font-size: 1.4rem; /* Dropdown menüsündeki item'ları büyüttük */
            padding: 10px 20px; /* Item'ların etrafına boşluk ekledik */
        }

        /* Dropdown menüsüne hover etkisi ekledik */
        .dropdown-item:hover {
            background-color: #B8D5FF; /* Hover durumunda pastel mavi arka plan */
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #A9C8FF;">
        <!-- pastel mavi -->
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white" href="#">
                <i class="bi bi-tools me-2"></i>Birim Admin Panel
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Arıza Bildirim", "Bildirim", "Kullanici", null, new { @class = "nav-link text-white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Bildirim geçmişi", "Listeleme", "Kullanici", null, new { @class = "nav-link text-white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Profil", "Profil", "Kullanici", null, new { @class = "nav-link text-white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Çıkış yap", "LogOut", "Kullanici", null, new { @class = "nav-link text-white" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa içeriği -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
