<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Kullanıcı Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f7fc;
            height: 100vh;
            display: flex;
        }

        .sidebar {
            width: 240px;
            background-color: #00C0C0;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 2rem 1rem;
        }

            .sidebar h4 {
                color: white;
                font-weight: bold;
                text-align: center;
                margin-bottom: 2rem;
            }

            .sidebar .nav-link {
                color: white;
                font-size: 1.1rem;
                font-weight: 500;
                padding: 12px 16px;
                border-radius: 10px;
                transition: background-color 0.2s ease-in-out;
            }

                .sidebar .nav-link:hover {
                    background-color: #009d9b;
                    color: white;
                }

        .sidebar-bottom {
            margin-top: auto;
        }

        .content {
            flex-grow: 1;
            padding: 2rem;
            overflow-y: auto;
        }

        h2 {
            font-weight: 700;
            font-size: 2rem;
        }

        table {
            width: 100%;
            margin-top: 30px;
        }

            table th, table td {
                font-size: 1.2rem;
                padding: 15px;
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <h4>Birim Paneli</h4>
            <nav class="nav flex-column">
                @Html.ActionLink("Arıza Bildirim", "Bildirim", "Kullanici", null, new { @class = "nav-link" })
                @Html.ActionLink("Bildirim Geçmişi", "Listeleme", "Kullanici", null, new { @class = "nav-link" })
            </nav>
        </div>

        <!-- Alt Menüler -->
        <div class="sidebar-bottom">
            <nav class="nav flex-column">
                @Html.ActionLink("Profil", "Profil", "Kullanici", null, new { @class = "nav-link" })
                @Html.ActionLink("Çıkış Yap", "LogOut", "Kullanici", null, new { @class = "nav-link" })
            </nav>
        </div>
    </div>

    <!-- Sayfa İçeriği -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
