﻿@{
    ViewBag.Title = "BirimEkle";
    Layout = "~/Views/Shared/_LayoutGenelAdmin.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Archivo', sans-serif;
            background-color: #F9F9F9;
        }

        h2, h3 {
            color: #1A2A47;
        }

        .form-group label {
            color: #2A3A52;
            font-weight: 500;
        }

        .form-control {
            border-radius: 6px;
            padding: 10px;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #1f6e66;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 6px 14px;
            font-size: 0.9rem;
        }

            .btn-primary:hover {
                background-color: #155c53;
            }

        .btn-danger {
            background-color: #D23B23;
            color: white;
            border: none;
            border-radius: 20px;
            padding: 6px 14px;
            font-size: 0.9rem;
        }

            .btn-danger:hover {
                background-color: #B8321C;
            }

        .table {
            background-color: #ffffff;
            border-radius: 10px;
        }

            .table th {
                background-color: #2C3E50;
                color: white;
                text-align: center;
            }

            .table td {
                text-align: center;
                vertical-align: middle;
            }

        .table-hover tbody tr:hover {
            background-color: #96ADD6;
        }

        .form-group {
            margin-bottom: 1rem;
        }
    </style>
}

<div class="container mt-5">
    <h2 class="mb-4">Birim Ekle / Çıkar</h2>

    @using (Html.BeginForm("BirimEkle", "GenelAdmin", FormMethod.Post))
    {
        <div class="form-group">
            <label for="BirimAd">Birim Adı:</label>
            <input type="text" name="BirimAd" id="BirimAd" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    }

    <h3 class="mt-5 mb-3">Mevcut Birimler</h3>
    <table class="table table-bordered table-hover align-middle">
        <thead>
            <tr>
                <th>Birim Adı</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Birim in Model.Birimler)
            {
                <tr>
                    <td>@Birim.Ad</td>
                    <td>
                        @using (Html.BeginForm("BirimSil", "GenelAdmin", FormMethod.Post))
                        {
                            <input type="hidden" name="Id" value="@Birim.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bu birimi silmek istediğinize emin misiniz?');">Sil</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
