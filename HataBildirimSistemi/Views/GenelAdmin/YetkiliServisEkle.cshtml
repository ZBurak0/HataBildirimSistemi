﻿@model HataBildirimSistemi.Models.AdminPanelViewModel

@{
    ViewBag.Title = "Yetkili Servis Ekle";
    Layout = "~/Views/Shared/_LayoutGenelAdmin.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Archivo', sans-serif;
            background-color: #F9F9F9;
            padding: 20px;
        }

        .form-title {
            font-size: 24px;
            color: #1A2A47;
            margin-bottom: 16px;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 14px;
        }

        .form-label {
            font-size: 14px;
            color: #1A2A47;
            margin-bottom: 6px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 8px 10px;
            font-size: 14px;
            border-radius: 6px;
            border: 1px solid #ccc;
            background-color: #FFF;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #2C3E50;
                outline: none;
            }

        .btn {
            background-color: #1f6e66;
            padding: 8px 18px;
            font-size: 14px;
            border-radius: 20px;
            text-decoration: none;
        }

        .btn-success {
            background-color: #1f6e66;
            color: white;
            border: none;
            border-radius: 25px;
        }

            .btn-success:hover {
                background-color: #155c53;
            }
    </style>
}

<h2 class="form-title">Yetkili Servis Ekleme</h2>

@using (Html.BeginForm("YetkiliServisEkle", "GenelAdmin", FormMethod.Post))
{
    <div class="form-group">
        <label class="form-label">Ad:</label>
        @Html.TextBox("Ad", null, new { @class = "form-control", maxlength = 50 })
    </div>

    <div class="form-group">
        <label class="form-label">Soyad:</label>
        @Html.TextBox("Soyad", null, new { @class = "form-control", maxlength = 50 })
    </div>

    <div class="form-group">
        <label class="form-label">Tel No:</label>
        @Html.TextBox("TelNo", null, new { @class = "form-control", maxlength = 11 })
    </div>

    <div class="form-group">
        <label class="form-label">Kullanıcı Adı:</label>
        @Html.TextBox("YKullaniciAd", null, new { @class = "form-control", maxlength = 50 })
    </div>

    <div class="form-group">
        <label class="form-label">Şifre:</label>
        @Html.Password("YSifre", null, new { @class = "form-control", maxlength = 20 })
    </div>

    <div class="form-group">
        <label class="form-label">Arıza Türü:</label>
        @Html.DropDownList("ArizaTurId", new SelectList(Model.ArizaTurleri, "Id", "Ad"), "Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-actions">
        <input type="submit" value="Ekle" class="btn btn-success" />
    </div>
}