@{
    ViewBag.Title = "Yetkilendirme";
    Layout = "~/Views/Shared/_LayoutGenelAdmin.cshtml";
}
@model HataBildirimSistemi.Models.AdminPanelViewModel

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Archivo', sans-serif;
            background-color: #F9F9F9;
        }

        .table {
            background-color: #ffffff;
            border-radius: 10px;
        }

            .table th {
                background-color: #2C3E50;
                color: white;
                text-align: center;
            }

            .table td {
                text-align: center;
                vertical-align: middle;
            }

        .table-hover tbody tr:hover {
            background-color: #96ADD6;
        }

        h2, h4 {
            color: #1A2A47;
        }

        .btn-action {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.875rem;
            display: inline-flex;
            align-items: center;
        }

            .btn-action i {
                margin-right: 5px;
            }

        .btn-admin {
            background-color: #1f6e66;
            color: white;
            border: none;
        }

            .btn-admin:hover {
                background-color: #155c53;
            }

        .btn-delete {
            background-color: #D23B23;
            color: white;
            border: none;
        }

<div class="container mt-4">

    <h2 class="mb-4 text-primary">Admin Yetkilendirme Paneli</h2>

    <div class="mb-5">
        <h4 class="mb-3">Kullanıcılar</h4>
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Birim</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.Kullanicilar)
                {
                    <tr>
                        <td>@k.Ad</td>
                        <td>@k.Soyad</td>
                        <td>@(k.Birim?.Ad ?? "—")</td>
                        <td>
                            <a href="@Url.Action("KullaniciyiAdminYap", new { id = k.Id })" class="btn btn-success btn-sm me-2">
                                <i class="bi bi-person-check"></i> Admin Yap
                            </a>
                            <a href="@Url.Action("KullaniciSil", new { id = k.Id })" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <h4 class="mb-3">Adminler</h4>
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.Adminler)
                {
                    <tr>
                        <td>@a.Ad</td>
                        <td>@a.Soyad</td>
                        <td>
                            <a href="@Url.Action("AdminiKullaniciYap", new { id = a.Id })" class="btn btn-warning btn-sm">
                                <i class="bi bi-person-dash"></i> Kullanıcı Yap
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
