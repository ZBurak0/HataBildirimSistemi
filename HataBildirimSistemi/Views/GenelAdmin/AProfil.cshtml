@model HataBildirimSistemi.Models.Admin
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_LayoutGenelAdmin.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Archivo', sans-serif;
            background-color: #F9F9F9;
        }

        .profile-container {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 40px;
            margin-top: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            color: #1A2A47;
            font-weight: 600;
            margin-bottom: 20px;
            font-size: 28px;
        }

        .profile-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .profile-table th,
            .profile-table td {
                padding: 16px 20px;
                text-align: left;
                border-bottom: 1px solid #ddd;
                font-size: 16px;
            }

            .profile-table th {
                background-color: #F9F9F9;
                color: #2A3A52;
            }

            .profile-table td {
                background-color: #F9F9F9;
                color: #2A3A52;
                font-size: 14px;
                border-top-right-radius: 8px;
                border-bottom-right-radius: 8px;
            }

        .btn-edit {
            background-color: #fca7a7;
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 30px;
            transition: background-color 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-edit:hover {
                background-color: #1f6e66;
            }

        .text-end {
            text-align: right;
        }

        .sifre-wrapper {
            position: relative;
            display: inline-block;
            width: 100%;
        }

        .sifre-span {
            display: inline-block;
            letter-spacing: 3px;
            padding-right: 30px;
            width: 100%;
            box-sizing: border-box;
        }

        .eye-btn {
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 18px;
            color: #666;
            cursor: pointer;
            padding: 0 10px;
        }

            .eye-btn:hover {
                color: #000;
            }
    </style>
}

<div class="container">
    <div class="profile-container">
        <h2>Profil Bilgilerim</h2>

<table class="table table-bordered mt-3 w-50">
    <tr>
        <th>Ad</th>
        <td>@Model.Ad</td>
    </tr>
    <tr>
        <th>Soyad</th>
        <td>@Model.Soyad</td>
    </tr>
    <tr>
        <th>Çalıştığı birim</th>
        <td>@Model.Birim.Ad</td>
    </tr>
    <tr>
        <th>Yetkisi</th>
        <td>@Model.Yetki.Ad</td>
    </tr>
    <tr>
        <th>Telefon</th>
        <td>@Model.TelNo</td>
    </tr>
    <tr>
        <th>Kullanıcı Ad</th>
        <td>@Model.AKullaniciAd</td>
    </tr>
    <tr>
        <th>Şifre</th>
        <td>@Model.ASifre</td>
    </tr>
</table>
<a href="@Url.Action("Duzenle", "GenelAdmin", new { id = Model.Id })" class="btn btn-warning">
    Düzenle

        toggleBtn.addEventListener("click", function () {
            if (!gosteriliyor) {
                sifreSpan.textContent = gerçekSifre;
                sifreSpan.style.letterSpacing = "normal";
                gosteriliyor = true;
            } else {
                sifreSpan.textContent = "********";
                sifreSpan.style.letterSpacing = "3px";
                gosteriliyor = false;
            }
        });
    </script>
}
