@model HataBildirimSistemi.Models.Admin
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_LayoutBirimAdmin.cshtml";
        }

            .form-control:focus {
                border-color: #2C3E50;
                outline: none;
            }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 8px;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #008756;
            color: white;
            border: none;
            border-radius: 25px;
        }

            .btn-primary:hover {
                background-color: #02b574;
            }

        .btn-secondary {
            background-color: #d6655c;
            color: white;
            border: none;
            border-radius: 25px;
        }

            .btn-secondary:hover {
                background-color: #f07f75;
            }

        .text-danger {
            color: #d9534f;
            font-size: 14px;
        }
    </style>
}

<h2>Profil Bilgilerini Düzenle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <!-- Genel validation hataları -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Ad)
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Soyad)
        @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Soyad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TelNo)
        @Html.TextBoxFor(m => m.TelNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TelNo, "", new { @class = "text-danger" })
    </div>

    <!-- Kullanıcı Adı -->
    <div class="form-group">
        @Html.LabelFor(m => m.AKullaniciAd)
        @Html.TextBoxFor(m => m.AKullaniciAd, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
        @Html.ValidationMessageFor(m => m.AKullaniciAd, "Kullanıcı adı @akdeniz.edu.tr ile bitmelidir.", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ASifre)
        @Html.PasswordFor(m => m.ASifre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ASifre, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("AProfil", "GenelAdmin")" class="btn btn-secondary">İptal</a>
}
