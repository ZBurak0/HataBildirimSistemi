@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Şifremi Unuttum</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2>Şifremi Unuttum</h2>

        .form-control::placeholder {
            color: #888;
        }

    .input-group {
        position: relative;
        margin-bottom: 20px;
    }

    .input-icon {
        position: absolute;
        top: 50%;
        left: 14px;
        transform: translateY(-50%);
        font-size: 1.2rem;
        color: #00C2C7;
        z-index: 10;
        pointer-events: none;
    }

    .btn-send {
        background-color: #00C0C0;
        color: white;
        border: none;
        border-radius: 25px;
        padding: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: 0.3s ease;
        width: 100%;
    }

        .btn-send:hover {
            background-color: #009d9b;
        }

    .alert-info {
        border-radius: 25px;
        background-color: #d9f7f0;
        color: #3e8e41;
        padding: 15px;
        margin-top: 20px;
    }
</style>

@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
{
                    <div class="mb-3">
                        <label for="KKullaniciAd" class="form-label">Kullanıcı Adı</label>
                        <input type="text" name="KKullaniciAd" class="form-control" required />
        </div>

                    <button type="submit" class="btn btn-primary">Onay Kodu Gönder</button>
                }

        <!-- Bilgilendirme Mesajı -->
        @if (ViewBag.Message != null)
        {
                    <div class="alert alert-info mt-3">@ViewBag.Message</div>
        }
    </div>
        </div>
    </div>
</body>
</html>