@{
    Layout = null;
}

<!DOCTYPE html>
@{
    ViewData["Title"] = "Giriş Yap";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
    }

    .login-card {
        background: white;
        border-radius: 20px;
        padding: 50px;
        width: 100%;
        max-width: 550px; /* Genişlik artırıldı */
        min-height: 500px; /* Boy uzunluğu artırıldı */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        animation: fadeIn 0.5s ease-in-out;
        position: relative;
    }

    .form-control {
        border-radius: 12px;
        padding-left: 40px;
        height: 48px;
        font-size: 1rem;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .input-group {
        position: relative;
        margin-bottom: 30px;
    }

    .login-title {
        font-weight: 700;
        color: #333;
        margin-bottom: 40px;
        text-align: center;
        font-size: 1.8rem;
    }

    .btn-login {
        background: #4e54c8;
        color: white;
        border: none;
        border-radius: 12px;
        padding: 14px;
        font-weight: 500;
        font-size: 1.1rem;
        transition: all 0.3s ease-in-out;
    }

        .btn-login:hover {
            background: #3b3fc0;
        }

    fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .forgot {
        text-align: center;
        font-size: 0.9rem;
        margin-top: 20px;
    }

    .btn-register {
        background: #ff6347; /* Kayıt butonu için farklı renk */
        color: white;
        border: none;
        border-radius: 12px;
        padding: 14px;
        font-weight: 500;
        font-size: 1.1rem;
        margin-top: 20px;
        transition: all 0.3s ease-in-out;
    }

        .btn-register:hover {
            background: #e55347;
        }
</style>

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <div class="login-card">
        <h3 class="login-title">🔐 Giriş Yap</h3>

        <div class="input-group">
            <i class="fas fa-user input-icon"></i>
            <input type="text" id="KKullaniciAd" name="KKullaniciAd" class="form-control" placeholder="Kullanıcı Adı" required />
        </div>

        <div class="input-group">
            <i class="fas fa-lock input-icon"></i>
            <input type="password" id="KSifre" name="KSifre" class="form-control" placeholder="Şifre" required />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-login">Giriş Yap</button>
        </div>

        <div class="forgot">
            <a href="#">Şifremi Unuttum?</a>
        </div>

        @* Kayıt ol butonunu ekliyoruz *@
        <div class="d-grid">
            <a href="@Url.Action("Register", "Login")" class="btn btn-register">Kayıt Ol</a>
        </div>

        @* Sadece mesaj varsa alert kutusunu göster *@
        @if (!string.IsNullOrEmpty(ViewBag.Mesaj as string))
        {
            <div class="alert alert-danger mt-4" role="alert">
                @ViewBag.Mesaj
            </div>
        }
    </div>
}
