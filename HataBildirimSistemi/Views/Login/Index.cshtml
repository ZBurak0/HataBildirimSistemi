@{
    Layout = null;
}

<!DOCTYPE html>
@{
    ViewData["Title"] = "Giriş Yap";
}

<!-- Stil ve font bağlantıları -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Archivo:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #f2f7fc;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Archivo', sans-serif;
        margin: 0;
    }

    .login-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 50px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .login-title {
        font-weight: 600;
        color: #003d4d;
        margin-bottom: 30px;
        font-size: 36px;
    }

    .form-control {
        padding-left: 45px;
        border-radius: 4px; /* Dikdörtgen kenarlar için küçük radius */
        height: 56px;
        font-size: 1.1rem;
        border: 1px solid #ccc;
        color: #003d4d;
        background-color: #f9f9f9;
        position: relative;
        z-index: 1;
        transition: all 0.3s ease-in-out;
        width: 100%;
        box-sizing: border-box;
    }


        .form-control:focus {
            border-color: #00C0C0;
            box-shadow: 0 0 0 0.2rem rgba(0, 174, 239, 0.25);
            outline: none;
        }

        .form-control::placeholder {
            color: #888;
        }

    .input-group {
        position: relative;
        margin-bottom: 25px;
        width: 100%;
    }

    .input-icon {
        position: absolute;
        top: 50%;
        left: 16px;
        transform: translateY(-50%);
        font-size: 1.3rem;
        color: #00C2C7;
        z-index: 10;
        pointer-events: none;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 16px;
        transform: translateY(-50%);
        font-size: 1.2rem;
        color: #00C2C7;
        cursor: pointer;
        z-index: 10;
    }

    .btn-login {
        background-color: #00C0C0;
        color: white;
        border: none;
        border-radius: 28px;
        padding: 14px;
        font-weight: 600;
        font-size: 1.15rem;
        transition: 0.3s ease;
        width: 100%;
    }

        .btn-login:hover {
            background-color: #009d9b;
        }

    .forgot {
        text-align: center;
        font-size: 1.05rem;
        margin-top: 18px;
    }

        .forgot a {
            color: #00C0C0;
            font-size: 1.05rem;
            text-decoration: none;
            transition: 0.3s ease;
        }

            .forgot a:hover {
                text-decoration: underline;
            }

    .btn-register {
        text-align: center;
        font-size: 1.05rem;
        margin-top: 18px;
        color: #009d9b;
        font-weight: 600;
        width: 100%;
        text-decoration: none;
        padding: 14px;
        border: none;
        border-radius: 28px;
        background-color: transparent;
        transition: 0.3s ease-in-out;
    }

        .btn-register:hover {
            text-decoration: underline;
            color: #005b5a;
        }

    .alert-danger {
        border-radius: 25px;
        background-color: #ffd4d4;
        color: #d9534f;
        padding: 16px;
        margin-top: 25px;
        font-size: 1.05rem;
    }
</style>

@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <div class="login-card">
        <h3 class="login-title">Giriş Yap</h3>

        <!-- Kullanıcı Adı -->
        <div class="input-group">
            <i class="fas fa-user input-icon"></i>
            <input type="text" id="KKullaniciAd" name="KKullaniciAd" class="form-control" placeholder="Kullanıcı Adı" required />
        </div>

        <!-- Şifre -->
        <div class="input-group">
            <i class="fas fa-lock input-icon"></i>
            <input type="password" id="KSifre" name="KSifre" class="form-control" placeholder="Şifre" required />
            <i class="fas fa-eye-slash toggle-password" onclick="togglePassword()" title="Şifreyi Göster/Gizle"></i>
        </div>

        <!-- Giriş Yap Butonu -->
        <div class="d-grid">
            <button type="submit" class="btn btn-login">Giriş Yap</button>
        </div>
        <p class="mt-3">
            <a href="@Url.Action("ForgotPassword", "Login")">Şifremi Unuttum</a>
        </p>

        <!-- Kayıt Ol -->
        <div class="d-grid">
            <a href="@Url.Action("Register", "Login")" class="btn btn-register">Kayıt Ol</a>
        </div>

        <!-- Hata Mesajı -->
        @if (!string.IsNullOrEmpty(ViewBag.Mesaj as string))
        {
            <div class="alert alert-danger mt-4" role="alert">
                @ViewBag.Mesaj
            </div>
        }
    </div>
}

<!-- Şifreyi Göster/Gizle Script -->
<script>
    function togglePassword() {
        const passwordInput = document.getElementById('KSifre');
        const toggleIcon = document.querySelector('.toggle-password');
        const isPassword = passwordInput.type === 'password';

        passwordInput.type = isPassword ? 'text' : 'password';
        toggleIcon.classList.toggle('fa-eye');
        toggleIcon.classList.toggle('fa-eye-slash');
    }
</script>
